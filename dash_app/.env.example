# Environment Configuration
ENV=development
DEBUG=True

# Database
DATABASE_URL=postgresql://lstm_user:lstm_password@localhost:5432/lstm_dashboard

# Redis & Celery
REDIS_URL=redis://localhost:6379/0
CELERY_BROKER_URL=redis://localhost:6379/0
CELERY_RESULT_BACKEND=redis://localhost:6379/0

# Application
APP_HOST=0.0.0.0
APP_PORT=8050
SECRET_KEY=change-this-in-production

# Logging
LOG_LEVEL=INFO

# GPU
CUDA_VISIBLE_DEVICES=0

# Email Notifications (Feature #3)
EMAIL_ENABLED=False
EMAIL_PROVIDER=sendgrid
EMAIL_FROM=noreply@lstm-dashboard.com
EMAIL_FROM_NAME=LSTM Bearing Fault Diagnosis

# SendGrid (recommended for production)
SENDGRID_API_KEY=your-sendgrid-api-key-here

# SMTP (alternative, e.g., Gmail)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USERNAME=your-email@gmail.com
SMTP_PASSWORD=your-app-password

# Email Rate Limiting
EMAIL_RATE_LIMIT=100

# Feature #5: Tags & Search Configuration
FEATURE_TAGS_ENABLED=True
FEATURE_SEARCH_ENABLED=True
FEATURE_SAVED_SEARCHES_ENABLED=True
FEATURE_TAG_SUGGESTIONS_ENABLED=True

# Search Engine
SEARCH_ENGINE=postgres
SEARCH_MAX_RESULTS=100

# Tag System
TAGS_MAX_PER_EXPERIMENT=10
TAGS_MAX_LENGTH=50
TAGS_CASE_SENSITIVE=False
TAGS_ALLOW_SPACES=False

# Performance Tuning
SEARCH_DEBOUNCE_MS=300
TAG_AUTOCOMPLETE_MIN_CHARS=2
TAG_AUTOCOMPLETE_MAX_RESULTS=10
SEARCH_CACHE_TTL_SECONDS=60
